<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.warriorrat.firearmquiz.QuestionFive">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Question Five"
        android:textColor="#060505"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/askQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Which of these are Rifles?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#090909"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="goToQuestionSix"
        android:text="Next Question" />

    <CheckBox
        android:id="@+id/boxAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:checked="false"
        android:paddingRight="0dp"
        android:text="AR-15"
        android:layout_below="@+id/askQuestion"
        android:layout_toLeftOf="@+id/boxUSP"
        android:layout_toStartOf="@+id/boxUSP" />

    <CheckBox
        android:id="@+id/boxAK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="AK-47"
        android:layout_alignTop="@+id/boxUSP"
        android:layout_alignRight="@+id/question"
        android:layout_alignEnd="@+id/question" />

    <CheckBox
        android:id="@+id/boxR700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="R700"
        android:layout_below="@+id/boxAK"
        android:layout_toRightOf="@+id/boxH1911"
        android:layout_toEndOf="@+id/boxH1911" />

    <CheckBox
        android:id="@+id/boxUSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="HK USP"
        android:layout_above="@+id/boxH1911"
        android:layout_toLeftOf="@+id/boxAK"
        android:layout_toStartOf="@+id/boxAK" />

    <CheckBox
        android:id="@+id/boxFS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="92FS"
        android:layout_below="@+id/boxAK"
        android:layout_toRightOf="@+id/boxR700"
        android:layout_toEndOf="@+id/boxR700" />

    <CheckBox
        android:id="@+id/boxP226"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="P226"
        android:layout_above="@+id/boxFS"
        android:layout_toRightOf="@+id/boxFS"
        android:layout_toEndOf="@+id/boxFS" />

    <CheckBox
        android:id="@+id/boxH1911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="1911"
        android:layout_below="@+id/boxAR"
        android:layout_alignLeft="@+id/askQuestion"
        android:layout_alignStart="@+id/askQuestion" />

    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitAnswer"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
